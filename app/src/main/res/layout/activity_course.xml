<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grayfon"
        android:orientation="horizontal"
        android:padding="@dimen/padding_for_title">

        <TextView
            android:id="@+id/textDateCourseAct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/gray"
            android:textSize="@dimen/size_course_button" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Покупка"
            android:textColor="@color/gray"
            android:textSize="@dimen/size_course_button" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Продажа"
            android:textColor="@color/gray"
            android:textSize="@dimen/size_course_button" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvCourse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       tools:listitem="@layout/courselistitem"
        />

</LinearLayout>