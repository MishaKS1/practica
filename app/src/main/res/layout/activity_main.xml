<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="500dp">
        <LinearLayout
            android:baselineAligned="false"
            android:layout_margin="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/museum"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/titletext"/>
        </LinearLayout>
        <LinearLayout
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/roundcornerslayout"
            android:layout_height="100dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/pinico"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:text="Отделения и банкоматы"/>
        </LinearLayout>
        <LinearLayout
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:background="@drawable/roundcornerslayout"
            android:layout_height="100dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:weightSum="2"
                android:gravity="center_vertical"
                android:background="@drawable/roundcornerslayout"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:src="@drawable/dollar"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:gravity="start"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/colorBlack"
                    android:layout_height="wrap_content"
                    android:text="Курсы валют"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:gravity="end"
                    android:textColor="@color/lightGray"
                    android:layout_height="wrap_content"
                    android:text="16.11.20"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:gravity="center"
                android:columnCount="2"
                android:background="@drawable/roundcornerslayout"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/colorBlack"
                        android:layout_height="wrap_content"
                        android:text="USD"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/lightGray"
                        android:layout_height="wrap_content"
                        android:text="80"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/colorBlack"
                        android:layout_height="wrap_content"
                        android:text="EUR"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/lightGray"
                        android:layout_height="wrap_content"
                        android:text="90"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:baselineAligned="false"
            android:layout_margin="10dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="20sp"
            android:background="@drawable/roundcornersbutton"
            android:textColor="@color/colorWhite"
            android:text="Войти"/>
    </LinearLayout>
</LinearLayout>