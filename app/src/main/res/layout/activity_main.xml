<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_background"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginBottom="@dimen/padding_main_buttons"
        android:paddingTop="60dp">

        <ImageView
            android:id="@+id/iconImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/main_icon" />

        <ImageView
            android:id="@+id/titleImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/main_title" />
    </LinearLayout>

    <Button
        android:id="@+id/btnBanks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_main_buttons"
        android:background="@drawable/button_radius_white"
        android:drawableLeft="@drawable/map_icon"
        android:gravity="center"
        android:padding="25dp"
        android:text="@string/atms"
        android:textSize="@dimen/size_course_button" />

    <include
        android:id="@+id/btnCourse"
        layout="@layout/button_course" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:background="@drawable/button_radius_blue"
        android:gravity="center"
        android:padding="25dp"
        android:text="@string/button_login"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/size_course_button" />
</LinearLayout>