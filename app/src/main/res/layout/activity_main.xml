<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/btm_kurs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical"
    android:padding="50dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_main_buttons"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/main_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/main_title" />
    </LinearLayout>


    <Button
        android:id="@+id/otdel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_main_buttons"
        android:background="@drawable/button_radius_white"
        android:drawableLeft="@drawable/map_icon"
        android:gravity="center_horizontal"
        android:padding="25dp"
        android:text="@string/otdeleeniya"
        android:textAlignment="center"
        android:textSize="15dp" />

    <include
        layout="@layout/but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/custom_button"/>/>

    <Button
        android:id="@+id/dut_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_main_buttons"
        android:background="@drawable/button_radius_blue"
        android:gravity="center_horizontal"
        android:padding="25dp"
        android:text="@string/button_login"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="15dp" />

</LinearLayout>