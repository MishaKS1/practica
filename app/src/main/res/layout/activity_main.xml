<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="28dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/padding_main_buttons"
        android:layout_marginTop="40dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/museum_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ws_bank" />

    </LinearLayout>

    <Button
        android:id="@+id/btnOffices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/map_pin"
        android:background="@drawable/edges"
        android:padding="25dp"
        android:text="@string/offices"
        android:layout_marginBottom="@dimen/padding_main_buttons"/>
    <include layout="@layout/button_course"
        android:id="@+id/button_enjoy"/>
     <Button
         android:id="@+id/btnSign"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/sign_button"
         android:layout_marginTop="@dimen/sign_in_button"/>
 </LinearLayout>