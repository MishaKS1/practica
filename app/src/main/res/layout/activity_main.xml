<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical"
        android:paddingTop="50dp"
        android:layout_marginBottom="@dimen/padding_main_buttons">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/museum"
            android:scaleType="fitCenter"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/worldskills"
            android:scaleType="fitCenter"/>

    </LinearLayout>
    <Button
        android:id="@+id/banks_button"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:drawableLeft="@drawable/map_icon"
        android:background="@drawable/button_radius_white"
        android:padding="25dp"
        android:text="@string/otdel"
        android:layout_marginBottom="@dimen/padding_main_buttons"/>

    <include layout="@layout/button_course"
        android:id="@+id/custom_button"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/login_button"
        android:layout_marginTop="@dimen/login_button_padding"
        android:background="@drawable/button_radius_blue"
        android:padding="25dp"
        android:text="@string/button_login"
        android:textColor="@color/colorWhite" />
</LinearLayout>