<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainfon"
    android:orientation="vertical"
    android:padding="50dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/museum" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/main_title" />
    </LinearLayout>

    <Button
        android:id="@+id/btnOtdel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/padding_main_buttons"
        android:layout_marginBottom="@dimen/padding_main_buttons"
        android:background="@drawable/button_radius_white"
        android:drawableLeft="@drawable/key"
        android:gravity="center_vertical"
        android:paddingLeft="25dp"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:text="@string/otdeleniaAndBank"
        android:textColor="@color/blackColor"
        android:textSize="@dimen/size_course_button" />

    <include
        layout="@layout/button_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_main_buttons" />

    <Button
        android:id="@+id/btnVhod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/padding_main_buttons"
        android:background="@drawable/button_radius_purple"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:text="@string/vhod"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/size_course_button" />

</LinearLayout>