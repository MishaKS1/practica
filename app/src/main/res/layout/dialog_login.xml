<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/padding_for_dialog">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:gravity="center"
        android:textSize="@dimen/size_title_dialog"
        android:layout_marginBottom="@dimen/padding_for_title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_for_title"
        android:gravity="center_horizontal"
        android:text="@string/hint_dialog_login"
        android:textSize="@dimen/size_hint_dialog" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:inputType="text"
        android:hint="Username"
        android:textSize="15dp"
        android:textColor="@color/colorGray"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="15dp"
        android:textColor="@color/colorGray"
        />
</LinearLayout>