<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/padding_for_dialog">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:gravity="center"
        android:textSize="@dimen/size_title_dialog"
        android:layout_marginBottom="@dimen/padding_for_title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_hint_dialog"
        android:text="@string/write_login"
        android:gravity="center"
        android:layout_marginBottom="@dimen/padding_for_title"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="2dp"
        android:fontFamily="sans-serif"
        android:inputType="text"
        android:hint="Логин"
        android:textSize="15dp"
        android:paddingLeft="5dp"
        android:textColor="@color/colorGray"
        android:background="@drawable/editstyle"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="2dp"
        android:fontFamily="sans-serif"
        android:inputType="textPassword"
        android:hint="Пароль"
        android:textSize="15dp"
        android:paddingLeft="5dp"
        android:textColor="@color/colorGray"
        android:background="@drawable/editstyle"/>

</LinearLayout>